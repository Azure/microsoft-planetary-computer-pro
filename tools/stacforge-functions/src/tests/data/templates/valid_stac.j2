{%- with cent = poly | centroid %}
    "proj:centroid": {
      "lat": {{ cent.y | round(5) }},
      "lon": {{ cent.x | round(5) }}
    },
{%- endwith %}
{%- with mgrs = id | regex_search('_T(\d{1,2})([C-X])([A-Z][A-V])') %}
    "mgrs:utm_zone": {{ mgrs.group(1) | int }},
    "mgrs:latitude_band": "{{ mgrs.group(2) }}",
